<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head.ejs'); %>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/public/js/chat.js" type="text/javascript" defer></script>
  </head>
  <body>
    <main class="container mx-auto row mt-5">
      <aside id="rooms" class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark col-3">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
          <span class="fs-4">Rooms</span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
          <li class="nav-item">
            <a id="general" href="#" class="nav-link text-warning">
              General
            </a>
          </li>
  
          <li class="nav-item">
            <a id="chat2" href="#" class="nav-link text-light">
              chat2
            </a>
          </li>
        </ul>
      </aside>

      <section class="col-9 border border-1 border-dark">
        <div class="d-flex align-items-center justify-content-between my-4">
          <h4>Logged in as: <span id="username"><%= user.username %></span></h4>
          <a href="/logout" class="btn btn-primary" id="logout">Logout</a>
        </div>
  
        <table id="messages" class="table table-striped"></table>
        
        <form class="d-flex align-items-center pb-2 pl-5" id="form">
          <input type="text" class="form-control" id="input" placeholder="Message" /><button class="btn btn-primary">Send</button>
        </form>
      </section>
    </main>
  </body>
</html>