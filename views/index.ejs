<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head.ejs'); %>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/public/js/chat.js" type="text/javascript" defer></script>
  </head>
  <body>
    <main class="container">
      <div class="d-flex align-items-center justify-content-between my-4">
        <h4>Logged in as: <span id="username"><%= user.username %></span></h4>
        <a href="/logout" class="btn btn-primary" id="logout">Logout</a>
      </div>

      <table id="messages" class="table table-striped"></table>
      
      <form class="d-flex align-items-center" id="form">
        <input type="text" class="form-control" id="input" placeholder="Message" /><button class="btn btn-primary">Send</button>
      </form>
    </main>
  </body>
</html>